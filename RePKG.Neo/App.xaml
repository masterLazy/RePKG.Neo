<Application x:Class="RePKG.Neo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RePKG.Neo"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--Fluent-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--画刷-->
            <SolidColorBrush x:Key="BhLight" Color="#fdfdfd"/>
            <SolidColorBrush x:Key="BhDefault" Color="#f3f3f3"/>
            <SolidColorBrush x:Key="BhGray" Color="#e6e6e6"/>
            <SolidColorBrush x:Key="BhBorder" Color="#d0d0d0"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
